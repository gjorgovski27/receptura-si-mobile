<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for network access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recepturasi"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Recepturasi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Recepturasi" />

        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="Home"
            android:theme="@style/Theme.Recepturasi" />

        <!-- Recipe Details Activity -->
        <activity
            android:name=".RecipeDetailsActivity"
            android:exported="true"
            android:label="Recipe Details"
            android:theme="@style/Theme.Recepturasi" />

        <!-- News Details Activity -->
        <activity
            android:name=".NewsDetailsActivity"
            android:exported="true"
            android:label="News Details"
            android:theme="@style/Theme.Recepturasi" />

        <!-- Create Recipe Activity -->
        <activity
            android:name=".CreateRecipeActivity"
            android:exported="true"
            android:label="Create Recipe"
            android:theme="@style/Theme.Recepturasi" />

        <!-- Signup Activity -->
        <activity
            android:name=".SignupActivity"
            android:exported="true"
            android:label="Signup"
            android:theme="@style/Theme.Recepturasi" />

    </application>

</manifest>
